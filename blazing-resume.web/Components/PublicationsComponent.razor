@using blazing_resume.models;
<h3>Publicaties</h3>

@foreach (var publicationItem in Data)
{
    <div class="mb-2">
        <MudTextField Label="Naam" @bind-Value="publicationItem.Name" />
    </div>
    <div class="mb-2">
        <MudTextField Label="Uitgever" @bind-Value="publicationItem.Publisher" />
    </div>
    <div class="mb-2">
        <MudDatePicker Label="Datum van uitgave" @bind-Value="publicationItem.ReleaseDate" Format="yyyy-MM-dd" />
    </div>
    <div class="mb-2">
        <MudTextField Label="URL" @bind-Value="publicationItem.Url" />
    </div>
    <div class="mb-2">
        <MudTextField Label="Samenvatting" @bind-Value="publicationItem.Summary" />
    </div>
}

<button @onclick="AddPublicationItem">Toevoegen</button>

@code {
    [Parameter]
    public List<Publication> Data { get; set; }

    private void AddPublicationItem()
    {
        Data.Add(new Publication());
    }
}